<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="electronic"
            type="com.example.techlab.model.Electronics"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.Product_managementActivity"
        android:background="@color/colorBackground">

        <TextView
            android:id="@+id/userManagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Productbeheer"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:textColor="@color/colorRecyclerViewItem"
            android:textStyle="bold" />
        <Button
            android:id="@+id/addProductButton"
            android:layout_width="100sp"
            android:layout_marginHorizontal="15dp"
            android:layout_height="wrap_content"
            android:onClick="addProductPageButton"
            android:shadowColor="@android:color/black"
            android:text="@string/productToevoegen"
            android:textSize="12sp"
            android:background="@drawable/color_button1"
            android:textColor="@android:color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/naam"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/categorie"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/voorraad"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/electronicsListItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>
    </LinearLayout>
</layout>