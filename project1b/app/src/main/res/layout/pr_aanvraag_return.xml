<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pr_aanvraag_returna"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@drawable/recyclerview_background">
    <TextView
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"
        android:id="@+id/leenavraagUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gebruiker"
        android:textSize="15sp" />

    <TextView
        android:layout_marginLeft="35dp"
        android:id="@+id/leenavraagAantal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aantal"
        android:textSize="15sp"/>

    <TextView
        android:layout_marginLeft="35dp"
        android:id="@+id/leenavraagProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Productnaam"
        android:textSize="15sp" />
        <TextView
            android:layout_marginLeft="35dp"
            android:id="@+id/productRequestDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request date"
            android:textSize="15sp" />
        <TextView
            android:layout_marginLeft="35dp"
            android:id="@+id/productLoanDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loaned date"
            android:textSize="15sp" />
        <TextView
            android:layout_marginLeft="35dp"
            android:id="@+id/productReturnDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Returned date"
            android:textSize="15sp" />
    <TextView
        android:layout_marginLeft="35dp"
        android:id="@+id/productRequestListProductStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status"
        android:layout_marginBottom="30dp"/>


    <CheckBox
        android:layout_marginLeft="15dp"
        android:id="@+id/ProductIsDamagedCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="product is beschadigd" />
    <Button
        android:id="@+id/productLendButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="lendProductButton"
        android:text="Product Uitlenen"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/color_button1"
        android:textColor="@android:color/white"
        android:layout_marginVertical="5dp" />

    <Button
        android:id="@+id/productTakeBackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="returnProductButton"
        android:text="Product Terugnemen"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/color_button1"
        android:textColor="@android:color/white"
        android:layout_marginVertical="5dp"/>

    <Button
        android:id="@+id/productRequestCancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/color_button1"
        android:onClick="productCancelButton"
        android:text="Uitlening Annuleren"
        android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>