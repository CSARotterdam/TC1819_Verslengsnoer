<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/ListContainer1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/ListItemImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/ListItemText_ProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:text="Product Name template"
                android:textSize="20sp"
                android:layout_toRightOf="@id/ListItemImage"
                android:layout_toEndOf="@id/ListItemImage"/>

            <TextView
                android:id="@+id/ListItemText_TurnInDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turn in Date template"
                android:textSize="18sp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/ListItemImage"
                android:layout_toEndOf="@id/ListItemImage"
                android:layout_below="@id/ListItemText_ProductName"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ListContainer2"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/ListContainer1">

            <TextView
                android:id="@+id/ListItemText_ProductAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aantal #"
                android:textSize="18sp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/ListItemText_ProductStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aangevraagd"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:layout_below="@id/ListItemText_ProductAmount"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>