<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:background="@color/colorBackground"
    >

    <RelativeLayout
        android:id="@+id/BorrowedItemContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">

        <RelativeLayout
            android:id="@+id/ListContainer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:layout_gravity="left">

            <ImageView
                android:id="@+id/ListItemImage"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <TextView
                android:id="@+id/ListItemText_ProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:text="Product Name template"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/ListItemImage"
                android:layout_toEndOf="@id/ListItemImage"/>

            <TextView
                android:id="@+id/ListItemText_TurnInDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turn in Date template"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/ListItemImage"
                android:layout_toEndOf="@id/ListItemImage"
                android:layout_below="@id/ListItemText_ProductName"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ListContainer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="136dp"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_toRightOf="@id/ListContainer1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aantal:"
                android:textSize="18sp"
                android:paddingRight="4dp"
                android:layout_toLeftOf="@id/ListItemText_ProductAmount" />

            <TextView
                android:id="@+id/ListItemText_ProductAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#"
                android:textSize="18sp"
                android:paddingRight="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textSize="18sp"
                android:paddingRight="4dp"
                android:layout_below="@id/ListItemText_ProductAmount"
                android:layout_toLeftOf="@id/ListItemText_ProductStatus" />

            <TextView
                android:id="@+id/ListItemText_ProductStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aangevraagd"
                android:textSize="18sp"
                android:paddingRight="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/ListItemText_ProductAmount"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>