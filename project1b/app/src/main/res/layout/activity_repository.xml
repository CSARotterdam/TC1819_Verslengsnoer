<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MenuActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_editor_absoluteY="100dp"
        android:background="@color/colorBackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center"
            android:text="Beheerder"
            android:textSize="30sp" />

        <Button
            android:id="@+id/BorrowedItemsUserListBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/color_button1"
            android:shadowColor="@android:color/black"
            android:text="Users With Borrowed Items"
            android:textColor="@color/colorButton1Text"/>
        <Button
            android:id="@+id/AangevrPrButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="Aangevraagde Producten"
            android:textColor="@color/colorButton1Text"
            android:background="@drawable/color_button1"
            android:shadowColor="@android:color/black"/>

        <Button
            android:id="@+id/TelaatButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="Te late Producten"
            android:textColor="@color/colorButton1Text"
            android:background="@drawable/color_button1"
            android:shadowColor="@android:color/black"/>
    </LinearLayout>
    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/menu_header"
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        app:itemTextColor="@color/lightGray"
        app:menu="@menu/drawermenu"
        android:layout_gravity="start">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>