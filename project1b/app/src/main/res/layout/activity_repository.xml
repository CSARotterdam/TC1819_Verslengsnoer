<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.RepositoryActivity"
    android:orientation="vertical"
    app:layout_editor_absoluteY="100dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="BEHEERDER"
        android:textSize="30dp"
        android:gravity="center_vertical|center" />

    <Button
        android:id="@+id/productBeheer"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="5dp"
        android:text="Productbeheer" />

    <!--// is het niet mooier als de buttonwidth = match parent-->
    <Button
        android:id="@+id/Button_Inventory"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="5dp"
        android:text="Inventaris"/>

    <Button
        android:id="@+id/BorrowedItemsUserList"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="5dp"
        android:text="Users With Borrowed Items"/>

    <Button
        android:id="@+id/BorrowItemBtn"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="5dp"
        android:onClick="BorrowItemBtn"
        android:text="@string/BorrowBtnName"/>
</LinearLayout>