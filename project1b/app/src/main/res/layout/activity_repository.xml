<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_editor_absoluteY="100dp"
    tools:context=".view.MenuActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center_vertical|center"
        android:text="BEHEERDER"
        android:textSize="30dp" />

    <Button
        android:id="@+id/productBeheer"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="5dp"
        android:text="Productbeheer" />

    <!--// is het niet mooier als de buttonwidth = match parent-->
    <Button
        android:id="@+id/Button_Inventory"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="5dp"
        android:text="Inventaris" />

    <Button
        android:id="@+id/BorrowedItemsUserListBtn"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="5dp"
        android:text="Users With Borrowed Items" />

    <Button
        android:id="@+id/BorrowItemBtn"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"
        android:text="@string/BorrowBtnName" />
</LinearLayout>