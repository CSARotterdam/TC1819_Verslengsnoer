<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="UsersItem"
            type="com.example.techlab.model.Users" />
    </data>
    <RelativeLayout
    android:id="@+id/usersItemView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/recyclerview_background"
    android:padding="15dp">

    <TextView
        android:id="@+id/userManagementItemUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="30dp"
        android:text="@{UsersItem.schoolEmail}"
        android:textColor="@color/colorGold"
        tools:text="LCD Display" />

    <TextView
        android:id="@+id/userManagementItemBorrowedAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="281dp"
        android:layout_marginLeft="281dp"
        android:text="@{String.valueOf(UsersItem.loanedAmount)}"
        android:textColor="@color/colorGold"
        tools:text="2" />


</RelativeLayout>
</layout>