<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/ListItemImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"/>
        <TextView
            android:id="@+id/ListItemText_ProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name template"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/ListItemText_TurnInDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn in Date template"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/ListItemText_ProductAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="##"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/ListItemText_ProductStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="##"
            android:textSize="20sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>