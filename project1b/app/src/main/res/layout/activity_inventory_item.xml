<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    >
<data>
    <variable
        name="product"
        type="com.example.techlab.model.Products" />
</data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/inventoryProductItemView"
    android:background="@drawable/color_button1"
    android:layout_margin="5dp">

    <!--Put this code in activity inventaris-->

    <!--Product Afbeelding-->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        android:id="@+id/image"
        android:src="@mipmap/ic_launcher"
        android:background="@color/White" />

    <!--Product Naam-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{product.name}"
        tools:text="LCD Display"
        android:id="@+id/product_name"
        android:layout_toRightOf="@+id/image"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:textColor="@color/White"
        android:textSize="17sp" />
    <!--Add TextView to see if item is available or not-->

</RelativeLayout>
</layout>